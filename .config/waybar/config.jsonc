{
    "layer": "top",
    "margin-top": 4,
    "margin-left": 4,
    "margin-right": 4,
    "modules-left": ["hyprland/window"],
    "modules-center": ["hyprland/workspaces#roman"],
    "modules-right": ["hyprland/language", "custom/clock"],
    "reload_style_on_change": true,
    "hyprland/window": {
        "icon": true,
        "icon-size": 22,
        "max-length": 60
    },
    "hyprland/language": {
        "format-en": "en",
        "format-uk": "uk"
    },
    "custom/clock": {
        "interval": 60,
        "exec": "~/.config/waybar/scripts/ro-date.sh"
    },
    // ROMAN Numerals style
    "hyprland/workspaces#roman": {
        "active-only": false,
        "all-outputs": true,
        "format": "{icon}",
        "show-special": false,
        "on-click": "activate",
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "persistent-workspaces": {
          "*": 5
        },
        "format-icons": {
            "1": "I",
            "2": "II",
            "3": "III",
            "4": "IV",
            "5": "V",
            "6": "VI",
            "7": "VII",
            "8": "VIII",
            "9": "IX",
            "10": "X"
        }
    }
}
